<!DOCTYPE html>
<html>
<head>
    <!--Default tags-->
    <meta name="language" content="English">
    <meta name="pagename" content="Super-Smart">
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="">
    <script type="text/javascript" src="@Url.Content("/Scripts/jquery-3.3.1.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("/Scripts/EmailValidation.js")"></script>
    <style>
        input, input:focus,textarea, textarea:focus {
            outline: none;
        }

        .emptyInput, .wrongEmail, .emptyTextarea, .notValidInput {
            border: 3px solid #900 !important;
            background-color: #FDD !important;
            border-style: double;
        }

        .validateEmail {
            border: 3px solid #32CD32 !important;
            background-color: none !important;
            border-style: double;
        }

        .errormessage {
            color: orangered;
        }

        
    </style>
    @RenderSection("head", required: false)
</head>
<body>
    @RenderBody()
</body>
</html>
