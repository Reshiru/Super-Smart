@model OverviewTeachingClassViewModel

@{
    ViewBag.Title = "Class Overview";
}

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--2-col"></div>

    <div class="mdl-cell mdl-cell--8-col mdl-shadow--4dp table-wrap">
        <h3>Classes</h3>

        <table class="mdl-data-table mdl-js-data-table mdl-cell--12-col">
            <thead>
                <tr>
                    <th class="mdl-data-table__cell--non-numeric">Designation</th>
                    <th>Started</th>
                    <th>Number of years</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TeachingClasses)
                {
                    <tr>
                        <td class="mdl-data-table__cell--non-numeric">@item.Designation</td>
                        <td>@item.Started</td>
                        <td>@item.NumberOfEducationYears</td>
                        <td>
                            <a href="@Url.Action("Overview","Subject",new {classId =item.Id })">
                                <i class="material-icons" id="overview">visibility</i>
                                <div class="mdl-tooltip" data-mdl-for="overview">
                                    Overview subject
                                </div>
                            </a>
                            @if (item.IsAmdin)
                            {
                            <a href="@Url.Action("Manage", new { teachingClassId = item.Id })">
                                <i class="material-icons" id="editclass">edit</i>
                                <div class="mdl-tooltip" data-mdl-for="editclass">
                                    Edit class
                                </div>
                            </a>
                            <a href="@Url.Action("Create", "Subject", new { classId = item.Id })">
                                <i class="material-icons" id="add">add</i>
                                <div class="mdl-tooltip" data-mdl-for="add">
                                    Add subject
                                </div>
                            </a>
                            }
                            <a href="@Url.Action("Students", new { classId = item.Id })">
                                <i class="material-icons" id="students">group</i>
                                <div class="mdl-tooltip" data-mdl-for="students">
                                   Students
                                </div>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button onclick="location.href='@Url.Action("Create")'" id="add-button" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
            <i class="material-icons">add</i>
        </button>

    </div>
</div>


