@model CreateDocumentViewModel

@using (Html.BeginForm("Create", "Document", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.TaskId)

    @Html.LabelFor(m => m.FileUpload)
    @Html.TextBoxFor(m => m.FileUpload, new { type = "file", multiple = "false" })


    @Html.LabelFor(m => m.DocumentType)
    @Html.EnumDropDownListFor( m => m.DocumentType, "Select DocumentType")

    <input type="submit" value="Submit" />
}