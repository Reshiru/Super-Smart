@model LoginViewModel

@using (Html.BeginForm("Login", "Verification"))
{
    @Html.AntiForgeryToken()

    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new { id = "mailInput", type = "email", required = "required" })
    @Html.ValidationMessageFor(m => m.Email)<br />

    @Html.TextBoxFor(m => m.Email, new {type = "text", required = "required" })
    @Html.ValidationMessageFor(m => m.Email)<br />


    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new { id = "passwordInput", type = "password", required = "required" })<br />
    @Html.ValidationMessageFor(m => m.Password)
    <textarea required maxlength="5" ></textarea>
    <textarea></textarea>
    <input type="submit" value="Submit" />

}