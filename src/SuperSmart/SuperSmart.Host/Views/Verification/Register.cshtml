@model RegisterViewModel

@{
    Layout = "~/Views/Shared/_VerificationLayout.cshtml";
}

<div id="createClassWrap" class="centerMiddleWrap">
    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
        @using (Html.BeginForm("Register", "Verification"))
        {
            @Html.AntiForgeryToken()


            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "mdl-textfield__input", id = "Firstname", required = "required" })
                <label class="mdl-textfield__label" for="FirstName">Firstname</label>
                <span class="mdl-textfield__error">@Html.ValidationMessageFor(m => m.FirstName)</span>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                @Html.TextBoxFor(m => m.LastName, new { @class = "mdl-textfield__input", id = "Lastname", required = "required" })
                <label class="mdl-textfield__label" for="FirstName">Lastname</label>
                <span class="mdl-textfield__error">@Html.ValidationMessageFor(m => m.LastName)</span>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                @Html.TextBoxFor(m => m.Email, new { @class = "mdl-textfield__input", id = "Email", required = "required" })
                <label class="mdl-textfield__label" for="Email">Email</label>
                <span class="mdl-textfield__error">@Html.ValidationMessageFor(m => m.Email)</span>
            </div>

            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                @Html.TextBoxFor(m => m.Password, new { @class = "mdl-textfield__input", id = "Password", required = "required", type = "password" })
                <label class="mdl-textfield__label" for="Password">Password</label>
                <span class="mdl-textfield__error">@Html.ValidationMessageFor(m => m.Password)</span>
            </div>


            <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent">
                Register
            </button>
            <p style="margin-top:25px;">Already have a account? @Html.ActionLink("Login", "Login")</p>
        }
    </div>
</div>